@{
    //для представления не используется мастер страница
    Layout = "/Views/Shared/_Layout.cshtml";
    

}

<main>
    <h3>Товары интернет магазина PhoneMarket</h3>

    <table>
        <thead>
            <tr>
                <td>Название</td>
                <td>Производитель</td>
                <td>Цена (руб)</td>
                <td>&nbsp;</td>
            </tr>
        </thead>

        <tbody>
            @{
                foreach (var phone in ViewBag.Phones)
                {
                    <tr>
                        <td>@phone.Name</td>
                        <td>@phone.Producer</td>
                        <td>@phone.Price</td>
                        <td><a href="/Home/Buy/@phone.Id">Купить</a></td>
                    </tr>
                }
            }

        </tbody>

    </table>

</main>


